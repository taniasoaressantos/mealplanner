<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1><%= @recipe.title %></h1>
    </div>
    <div class="card-body">
      <p><strong>Cook Time:</strong> <%= @recipe.cook_time_min %> minutes</p>
      <p><strong>Prep Time:</strong> <%= @recipe.prep_time_min %> minutes</p>
      <p><strong>Rating:</strong> <%= @recipe.rating %></p>
      <p><strong>Cuisine:</strong> <%= @recipe.cuisine %></p>
      <p><strong>Category:</strong> <%= @recipe.category %></p>
      <p><strong>Author:</strong> <%= @recipe.author %></p>
      <% if @recipe.image.present? %>
        <p><strong>Image:</strong> <img src="<%= @recipe.image %>" alt="<%= @recipe.title %>" class="img-fluid"></p>
      <% end %>

      <h2>Ingredients</h2>
      <ul class="list-group">
        <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
          <li class="list-group-item">
            <%= float_to_fraction(recipe_ingredient.quantity) %> <%= recipe_ingredient.quantity_unit %> <%= recipe_ingredient.ingredient.name %>
          </li>
        <% end %>
      </ul>

      <h2>Instructions</h2>
      <p><%= @recipe.instructions %></p>

      <%= link_to 'Back to Recipes', recipes_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
